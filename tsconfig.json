{
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "build",
        "strict": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
    },
    "include": ["./src"],
    "exclude": ["./src/**/*.test.ts"]
}